pipeline {
    agent any

    tools {maven "maven"}

    stages {
        stage('Pull')
        {
            steps {
                git ${githubURL}
            }
        }
        stage('Checkstyle') {
            steps {
                sh 'mvn validate'
            }
        }
        stage('Test') {
            steps {
                sh 'mvn test -Dcheckstyle.skip=true'
            }
        }
        stage('Build') {
            // Run the maven build
            steps {
                sh 'mvn package -DskipTests=true -Dcheckstyle.skip=true'
            }
        }
        stage('Deploy') {
            steps 
            {
                script 
                {
                    docker.withTool('docker')
                    {
                        repoId = ${dockerUser} +"/" +${projectName}
                        sh 'docker -v'
                        image = docker.build(repoId)
                        docker.withRegistry(${ContainerRegistryURL}, ${ContainerRegistryCredId})
                        {
                            image.push()
                        }
                    }
                }
                
            }
        }
    }
    post
    {
        success {
            slackSend(color: '#BDFFC3', message: 'Maven project ' + ${projectName} + ' has passed all tests and was successfully pushed to container registry')
        }
        failure {
            slackSend(color: '#FF0000', message: 'Maven project ' + ${projectName} + ' has failed to complete pipeline.')
        }
    }
    
}
