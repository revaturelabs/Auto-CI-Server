pipeline {
    agent any

    tools {
        nodejs "node"
    }

    stages {
        stage('Pull')
        {
            steps {
                git ${githubURL}
            }
        }
        stage('Build') {
            steps {
                sh 'npm install'
            }
        }
        stage('Lint')
        {
            steps {
                sh 'npm run lint'
            }
        }
        stage('Test') {
            // Run the maven build
            steps {
                sh 'npm test'
            }
        }
        stage('Deploy') {
            steps 
            {
                script 
                {
                    docker.withTool('docker')
                    {
                        repoId = ${dockerUser} +"/" +${projectName}
                        sh 'docker -v'
                        image = docker.build(repoId)
                        docker.withRegistry(${ContainerRegistryURL}, ${ContainerRegistryCredId})
                        {
                            image.push()
                        }
                    }
                }
                
            }
        }
    }
    post
    {
        success {
            slackSend(color: '#BDFFC3', message: 'npm project \"' + ${projectName} + '\" has passed all tests and was successfully pushed to container registry')
        }
        failure {
            slackSend(color: '#FF0000', message: 'npm Project \"' + ${projectName} + '\" has failed to complete pipeline.')
        }
    }
}
